#include <iostream>
#include <vector>
#include <algorithm>
#include <cmath>
#include <iomanip> 
using namespace std;
int main()
{
    long long t;
    cin >> t;
    while (t--)
    {
        long long a, b, c, q;
        cin >> a >> b >> c >> q;
        long long  sum = a + c + b + q;
        if (sum % 3 != 0 || sum / 3 < a || sum / 3 < b || sum / 3 < c)
            cout << "NO" << endl;
        else
            cout << "YES" << endl;
    }
    return 0;
}
