#include<iostream>
#include<vector>
#include<algorithm>
using namespace std;
int main()
{
    long long n,count=0;
    cin >> n;
    for (int i = 0; i < n; i++)
    {
        long long x, y, z,ans=0;
        cin >> x >> y >> z;
        ans = x + y + z;
        if (ans >= 2)
        {
            count++;
        }
    }
    cout << count << endl;
}
